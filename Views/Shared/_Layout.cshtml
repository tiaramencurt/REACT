<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - REACT</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <section>
            <h1>REACT</h1>
        </section>
        <nav>
            <img src="imagenes/logo completo (2).jpg" alt="logo react">
            <a href='@Url.Action("VerPerfil", "Account")'><img src="imagenes/Usuario.png" alt="Usuario"></a>
            <a href="/">v</a>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>
    
    <footer>
        <section>
            <span>📷</span>
            <span>📞</span>
            <span>✉️</span>
        </section>
        <p>© @DateTime.Now.Year - Todos los derechos reservados</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
