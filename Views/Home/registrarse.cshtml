@{
    ViewData["Title"] = "registrarse";
}

<div class="title">
    <h2>Registrarse</h2>
</div>

<section class="login-box">
    <form>
        <label for="email">Mail:</label>
        <input type="email" id="email" placeholder="Ingrese aquí">

        <label for="password">Contraseña:</label>
        <input type="password" id="password" placeholder="Ingrese aquí">

        <label for="confirmPassword">Confirmar contraseña:</label>
        <input type="password" id="confirmPassword" placeholder="Ingrese aquí">

        <label for="username">Username:</label>
        <input type="text" id="username" placeholder="Ingrese aquí">

        <p class="user-type">Tipo de usuario:</p>

        <div class="button-group">
            <button type="button" class="btn-yellow">Conductor</button>
            <button type="button" class="btn-yellow">Servicio de emergencia</button>
        </div>

        <a href="/Home/Login" class="btn-red center">Ya tengo cuenta, iniciar sesión</a>
    </form>
</section>
