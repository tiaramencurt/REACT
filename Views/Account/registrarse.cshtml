@{
    ViewData["Title"] = "Registrarse";
}

<main>
    <section class="Ingreso">
        <h1 class="title">Registrarse</h1>

        <form action='@Url.Action("Registrarse", "Account")' method="post" enctype="multipart/form-data">
            <div class="entrada"><p class="label">Username: </p><input type="text" name="Usuario" placeholder="Ingresar usuario" required class="placeholder"/></div><br>
            <div class="entrada"><p class="label">Mail: </p><input type="text" name="Mail" placeholder="Ingresar mail" required class="placeholder"/></div><br>
            <div class="entrada"><p class="label">Constraseña: </p><input type="password" name="Contraseña1" placeholder="Ingresar contraseña" required class="placeholder"/></div><br>
            <div class="entrada"><p class="label">Constraseña: </p><input type="password" name="Contraseña2" placeholder="Ingresar nuevamente la contraseña" required class="placeholder"/></div><br>

            <p>Tipo:</p>
            <select name="Tipo" required>
                <option value="true">Registrarse como Servicio de Emergencia</option>
                <option value="false">Registrarse como Conductor</option>
            </select>

            @if (ViewBag.mailExiste)
            {
                <p class="error-message">El usuario ingresado ya fue registrado anteriormente</p>
            }
            @if (!ViewBag.contraseñaCoincide)
            {
                <p class="error-message">Ambas contraseñas no coinciden</p>
            }

            <button type="submit" class="primary-button">Registrarse</button>

            <a href='@Url.Action("Login", "Account")' class="secondary-button">Iniciar sesión si ya tenes cuenta</a>
        </form>
    </section>
</main>
